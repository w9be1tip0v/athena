{
  "name": "Athena DevContainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "remoteUser": "vscode",
  "remoteEnv": { "PATH": "${containerEnv:PATH}:/home/vscode/.bun/bin" },
  "postCreateCommand": "bash -lc 'command -v bun >/dev/null 2>&1 || curl -fsSL https://bun.sh/install | bash; bun install --no-save'"
}