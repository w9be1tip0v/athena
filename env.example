# Environment Variables Template
# Copy this file to .env.local for local development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/zeus_dev"

# Payload CMS
PAYLOAD_SECRET="your-payload-secret-here"
PAYLOAD_PUBLIC_SERVER_URL="http://localhost:3000"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="your-blob-token-here"

# Sentry
SENTRY_DSN="your-sentry-dsn-here"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn-here"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Environment
NODE_ENV="development"

# Analytics (optional - set to 'true' to enable in development)
# NEXT_PUBLIC_ENABLE_ANALYTICS="true"

# Vercel Environment Variables (automatically set by Vercel)
# VERCEL_ENV - "development", "preview", or "production"
# VERCEL_URL - The URL of the deployment
# VERCEL_PROJECT_PRODUCTION_URL - Production URL 